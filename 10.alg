algoritmo "semnome"
var
   alt, larg, a, tinta: real
inicio
      Escreval ("Altura da parede: ")
      leia (alt)
      Escreval ("Largura da parede: ")
      leia (larg)
      a <- alt * larg
      tinta <- a / 2
      Escreval ("A área da parede é de", a, " metros, e a quantidade de tinta usada será de", tinta, " litros")
      
fimalgoritmo
