algoritmo "exerc5"
var
    aluno: caractere
    nota1, nota2, M: real
    
inicio
  Escreva ("Aluno: ")
  Leia (aluno)
  Escreva ("Nota 1: ")
  Leia (nota1)
  Escreva ("Nota 2: ")
  Leia (nota2)
  M <- (nota1 + nota2) /2
  Escreva ("A Média das notas", nota1, " e", nota2, " do(a) aluno(a) ", aluno, " é", M)
fimalgoritmo
